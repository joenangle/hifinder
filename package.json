{
  "name": "hifinder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "build:analyze": "npm run build && node scripts/analyze-css-size.js",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check",
    "// Listing aggregation scripts": "",
    "scrape:setup": "node scripts/setup-aggregation-infrastructure.js",
    "scrape:reddit": "node scripts/reddit-avexchange-scraper-v3.js",
    "scrape:bot-confirmations": "node scripts/monitor-avexchange-confirmations.js",
    "// NOTE: eBay uses affiliate-only strategy (no scraping) - see docs/EBAY_AFFILIATE_STRATEGY.md": "",
    "scrape:all": "node scripts/listing-scheduler.js",
    "// Moderation and admin scripts": "",
    "moderate": "node scripts/admin-moderation.js",
    "moderate:report": "node scripts/admin-moderation.js report",
    "moderate:quality": "node scripts/admin-moderation.js quality",
    "// Maintenance scripts": "",
    "archive:old": "node scripts/listing-scheduler.js",
    "cleanup:duplicates": "node scripts/admin-moderation.js quality",
    "// Cache management scripts": "",
    "cache:warm": "node scripts/warm-cache.js",
    "cache:warm:production": "node scripts/warm-cache.js --production",
    "cache:invalidate": "curl -X POST http://localhost:3000/api/cache/invalidate -H 'Content-Type: application/json' -d '{\"tag\":\"recommendations\"}'",
    "// Price trend analysis scripts": "",
    "analyze:prices": "node scripts/analyze-price-trends.js --months=6",
    "analyze:prices:dry-run": "node scripts/analyze-price-trends.js --dry-run --months=3",
    "analyze:prices:full": "node scripts/analyze-price-trends.js --months=12"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@auth/supabase-adapter": "^1.10.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.56.1",
    "@types/lodash": "^4.17.20",
    "lodash": "^4.17.21",
    "lucide-react": "^0.542.0",
    "next": "^16.0.10",
    "next-auth": "^4.24.13",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.1.2",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/third-parties": "^16.0.7",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jsdom": "^26.1.0",
    "puppeteer-core": "^24.21.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
